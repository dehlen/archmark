{% import "github.com/sparkymat/archmark/presenter" %}

{% func Home(showSearchHeader bool, searchQuery string, bookmarks []presenter.Bookmark) %}
  <div class="container mx-auto">
    <div class="flex flex-col mt-4">
      <form action="/" method="GET" class="flex flex-row">
        <input type="text" name="q" class="flex-grow text-xl mt-2 p-2 border outline-white" placeholder="Type query and hit Enter to search" autofocus>
      </form>
      {% if showSearchHeader %}
        <div class="px-4 py-2 mt-4 bg-gray-200 rounded-sm border border-dashed flex flex-row justify-between items-center">
          <span class="text-xl italic">Showing results for '{%s searchQuery %}'</span>
          <a href="/" class="text-l text-white bg-gray-600 hover:bg-gray-800 rounded px-4 py-2 shadow-md">Clear</a>
        </div>
      {% endif %}
      <ul>
        {% for _, bookmark := range bookmarks %}
          <li class="py-4">
            <a class="text-xl font-light" href="{%s bookmark.URL %}" target="_blank">{%s bookmark.Title %}</a>
            <div class="">
              <span class="text-sm text-gray-400">Added {%s bookmark.TimeSince %}</span>
              <span>â€¢</span>
              <a href="{%s bookmark.OriginalURL %}" target="_blank" class="text-sm text-gray-400 hover:text-blue-400 border-b-2 border-dashed">Open original link</a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endfunc %}
